<?xml version="1.0" encoding="UTF-8"?>
<PropertyList xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<!-- Nodes -->
	<node id="FlashProgrammerNode">
		<name>Flash Settings</name>
		<children>
			<child>CommunicationSettingBasic</child>
			<child>CommunicationSetting</child>
			<child>ResetSetting</child>
		</children>
	</node>

	<!-- Group -->
	<group id="CommunicationSettingBasic">
		<name>Communication Settings</name>
		<children> 
			<child>ComPortInfoText</child>
			<child>ComPortTextField</child>
		</children>
	</group>

	<group id="CommunicationSetting">
		<name>Communication Settings</name>
		<children>
			<child>ProtocolSelection</child>
			<child>ToolUart</child>
			<child>ToolI2CInfoText</child>
			<child>ToolSPIInfoText</child>
			<child>UARTautoBaudRate</child>
			<child>UARTSpeedSelection</child>
			<child>UARTParitySelection</child>
			<child>I2CSpeedSelection</child>
			<child>I2CBootloaderAddress</child>
			<child>SPISpeedSelection</child>
		</children>
	</group>

	<group id="ResetSetting">
		<name>Reset Settings</name>
		<children> 
			<child>ResetSelection</child>
			<child>ResetAddress</child>
		</children>
	</group>

	<!-- Categories-->
	<categories>
		<category>Setup</category>
		<category>Advanced</category>
		<category>Reset</category>
	</categories>

	<!-- Property Definitions : CommunicationSettingBasic-->
	<property id="ComPortInfoText">
		<target>generic</target>
		<name>Example - COM1 (Windows), /dev/ttyACM0 (Linux), /dev/tty.usbmodem1411 (macOS) </name>
		<valueType>Text</valueType>
		<categories>
			<category>Setup</category>
		</categories>
		<quickSetting />
	</property>

	<property id="ComPortTextField">
		<target>generic</target>
		<name>COM Port</name>
		<valueType>String</valueType>
		<defaultValue>/dev/ttyACM0</defaultValue>
		<description>Enter the serial port for bootloader communication
		</description>
		<categories>
			<category>Setup</category>
		</categories>
		<quickSetting />
	</property>

	<property id="ProtocolSelection">
		<target>generic</target>
		<name>Protocol</name>
		<valueType>ChoiceList</valueType>
		<values>
			<value>UART</value>
			<value>I2C</value>
			<value>SPI</value>
		</values>
		<defaultValue>UART</defaultValue>
		<description>Protocol selection
		</description>
		<categories>
			<category>Advanced</category>
		</categories>
		<quickSetting />
	</property>

	<property id="ToolUart">
		<target>generic</target>
		<name>Communication Bridge UART</name>
		<valueType>ChoiceList</valueType>
		<values>
			<value>MSP-BSL "Rocket"</value>
			<value>XDS Application UART</value>
			<value>Other</value>
		</values>
		<defaultValue>MSP-BSL "Rocket"</defaultValue>
		<enableIf>
			<property id="ProtocolSelection">UART</property>
		</enableIf>
		<description>Communication bridge selection for UART protocol
		</description>
		<categories>
			<category>Advanced</category>
		</categories>
		<quickSetting />
	</property>

	<property id="ToolI2CInfoText">
		<target>generic</target>
		<name>Communication bridge for I2C is only supported by MSP-BSL "Rocket"</name>
		<valueType>Text</valueType>
		<enableIf>
			<property id="ProtocolSelection">I2C</property>
		</enableIf>
		<categories>
			<category>Advanced</category>
		</categories>
		<quickSetting />
	</property>

	<property id="ToolSPIInfoText">
		<target>generic</target>
		<name>Communication bridge for SPI is only supported by MSP-BSL "Rocket"</name>
		<valueType>Text</valueType>
		<enableIf>
			<property id="ProtocolSelection">SPI</property>
		</enableIf>
		<categories>
			<category>Advanced</category>
		</categories>
		<quickSetting />
	</property>

	<property id="UARTautoBaudRate">
		<target>generic</target>
		<name>Apply auto baud rate for speed initialization</name>
		<valueType>Boolean</valueType>
		<defaultValue>1</defaultValue>
		<enableIf>
			<property id="ProtocolSelection">UART</property>
		</enableIf>
		<description>Transmit the sync byte for bootloader with automatic baud detections
		</description>
		<categories>
			<category>Advanced</category>
		</categories>
		<quickSetting />
	</property>

	<property id="UARTSpeedSelection">
		<target>generic</target>
		<name>UART Speed</name>
		<valueType>ChoiceList</valueType>	
		<values>
			<value>9600</value>
			<value>19200</value>
			<value>38400</value>
			<value>57600</value>
			<value>115200</value>
		</values>
		<defaultValue>115200</defaultValue>
		<enableIf>
			<property id="ProtocolSelection">UART</property>
		</enableIf>
		<description>UART speed selection
		</description>
		<categories>
			<category>Advanced</category>
		</categories>
		<quickSetting />
	</property>

	<property id="UARTParitySelection">
		<target>generic</target>
		<name>UART Parity Bit</name>
		<valueType>ChoiceList</valueType>
		<values>
			<value>No parity</value>
			<value>Even</value>
			<value>Odd</value>
		</values>
		<defaultValue>No parity</defaultValue>
		<enableIf>
			<property id="ProtocolSelection">UART</property>
		</enableIf>
		<description>UART parity selection
		</description>
		<categories>
			<category>Advanced</category>
		</categories>
		<quickSetting />
	</property>

	<property id="I2CSpeedSelection">
		<target>generic</target>
		<name>I2C Speed</name>
		<valueType>ChoiceList</valueType>	
		<values>
			<value>100000</value>
			<value>400000</value>
		</values>
		<defaultValue>100000</defaultValue>
		<enableIf>
			<property id="ProtocolSelection">I2C</property>
		</enableIf>
		<description>I2C Speed Selection
		</description>
		<categories>
			<category>Advanced</category>
		</categories>
		<quickSetting />
	</property>

	<property id="I2CBootloaderAddress">
		<target>generic</target>
		<name>I2C Bootloader Address</name>
		<valueType>String</valueType>
		<defaultValue>0x42</defaultValue>
		<enableIf>
			<property id="ProtocolSelection">I2C</property>
		</enableIf>
		<description>I2C Bootloader Address as slave in the system
		</description>
		<categories>
			<category>Advanced</category>
		</categories>
		<quickSetting />
	</property>

	<property id="SPISpeedSelection">
		<target>generic</target>
		<name>SPI Speed</name>
		<valueType>ChoiceList</valueType>
		<values>
			<value>125000</value>
			<value>250000</value>
			<value>500000</value>
			<value>1000000</value>
		</values>
		<defaultValue>125000</defaultValue>
		<enableIf>
			<property id="ProtocolSelection">SPI</property>
		</enableIf>
		<description>SPI speed selection
		</description>
		<categories>
			<category>Advanced</category>
		</categories>
		<quickSetting />
	</property>

	<!-- Property Definitions : ResetSettings-->
	<property id="ResetSelection">
		<target>generic</target>
		<name>Reset Settings</name>
		<valueType>ChoiceList</valueType>
		<values>
			<value>Reset</value>
			<value>Set PC to given address</value>
		</values>
		<defaultValue>Reset</defaultValue>
		<description>Reset options selection
		</description>
		<categories>
			<category>Reset</category>
		</categories>
	</property>

	<property id="ResetAddress">
		<target>generic</target>
		<name>Address</name>
		<valueType>String</valueType>
		<defaultValue>0x0</defaultValue>
		<enableIf>
			<property id="ResetSelection">Set PC to given address</property>
		</enableIf>
		<description>Set PC register is set with given address
		</description>
		<categories>
			<category>Reset</category>
		</categories>
	</property>
	<!-- Finish -->
</PropertyList>
