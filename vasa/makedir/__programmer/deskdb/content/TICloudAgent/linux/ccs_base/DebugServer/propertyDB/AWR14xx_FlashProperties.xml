<?xml version="1.0" encoding="UTF-8"?>
<PropertyList xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<!-- Nodes -->
	<node id="FlashProgrammerNode">
		<name>Flash Settings</name>
		<children>
			<child>COMPort</child>
			<child>COMPortText</child>
			<child>MemSelectRadio</child>
			<child>DownloadFormat</child>
			<child>FormatButton</child>
			<child>FormatButtonText</child>
		</children>
	</node>

	<categories>
		<category>Setup</category>
		<category>Format</category>
	</categories>
	
	<!-- Property Definitions -->
	<property id="COMPortText">
		<target>generic</target>
		<name>Example - COM1 (Windows), /dev/ttyACM0 (Linux)</name>
		<valueType>Text</valueType>
		<categories>
            <category>Setup</category>
        </categories>
		<quickSetting />
	</property>
	<property id="COMPort">
		<target>generic</target>
		<name>COM Port</name>
		<valueType>String</valueType>
		<defaultValue>COM1</defaultValue>
		<description>Enter the serial port for the device named "XDS110 Class Application/User UART".
		</description>
		<categories>
            <category>Setup</category>
        </categories>
		<quickSetting />
	</property>
	
	<property id="MemSelectRadio">
		<target>generic</target>
		<name>Target Memory Selection</name>
		<valueType>String</valueType>	
		<defaultValue>SFLASH</defaultValue>
		<readOnly>1</readOnly>
		<description>The Target Memory to where the flash files will be downloaded.
		</description>
		<categories>
			<category>Setup</category>
	    </categories>
	</property>
	
	<property id="DownloadFormat">
		<target>generic</target>
		<name>Format SFLASH Memory during flash file download</name>
		<valueType>Boolean</valueType>
		<defaultValue>1</defaultValue>
		<description>Check this box if the SFLASH memory should be formatted prior to flash file download.
		</description>
		<categories>
			<category>Format</category>
		</categories>
	</property>
	
	<property id="FormatButtonText">
		<target>generic</target>
		<name>Please power cycle device prior to clicking the Format button.</name>
		<valueType>Text</valueType>
		<categories>
            <category>Format</category>
        </categories>
	</property>
	<property id="FormatButton">
		<target>generic</target>
		<name>Format SFLASH</name>
		<valueType>Button</valueType>
		<action>DPActiveDebugSession.flash.performOperation("Format")</action>
		<description>Click this button to format the SFLASH memory without downloading flash files.
		</description>
		<categories>
			<category>Format</category>
		</categories>
	</property>
	
	<!-- Finish -->
</PropertyList>
