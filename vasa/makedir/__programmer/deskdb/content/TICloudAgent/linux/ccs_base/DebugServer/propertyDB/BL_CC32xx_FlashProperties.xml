<?xml version="1.0" encoding="UTF-8"?>
<PropertyList xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<!-- Nodes -->
	<node id="FlashProgrammerNode">
		<name>Flash Settings</name>
		<children>
			<child>CommunicationSettingBasic</child>
			<child>CommunicationSetting</child>
		</children>
	</node>

	<!-- Group -->
	<group id="CommunicationSettingBasic">
		<name>Communication Settings</name>
		<children> 
			<child>ComPortInfoText</child>
			<child>ComPortTextField</child>
		</children>
	</group>

	<group id="CommunicationSetting">
		<name>Communication Settings</name>
		<children>
			<child>ToolUart</child>
		</children>
	</group>

	<!-- Categories-->
	<categories>
		<category>Setup</category>
		<category>Advanced</category>
	</categories>

	<!-- Property Definitions : CommunicationSettingBasic-->
	<property id="ComPortInfoText">
		<target>generic</target>
		<name>Example - COM1 (Windows), /dev/ttyACM0 (Linux), /dev/tty.usbmodem1411 (macOS) </name>
		<valueType>Text</valueType>
		<categories>
			<category>Setup</category>
		</categories>
		<quickSetting />
	</property>

	<property id="ComPortTextField">
		<target>generic</target>
		<name>COM Port</name>
		<valueType>String</valueType>
		<defaultValue>/dev/ttyACM0</defaultValue>
		<description>Enter the serial port for bootloader communication
		</description>
		<categories>
			<category>Setup</category>
		</categories>
		<quickSetting />
	</property>

	<property id="ToolUart">
		<target>generic</target>
		<name>Communication Bridge UART</name>
		<valueType>ChoiceList</valueType>
		<values>
			<value>XDS Application UART</value>
		</values>
		<defaultValue>XDS Application UART</defaultValue>
		<enableIf>
			<property id="ProtocolSelection">UART</property>
		</enableIf>
		<description>Communication bridge selection for UART protocol
		</description>
		<categories>
			<category>Advanced</category>
		</categories>
		<quickSetting />
	</property>

	<!-- Finish -->
</PropertyList>
