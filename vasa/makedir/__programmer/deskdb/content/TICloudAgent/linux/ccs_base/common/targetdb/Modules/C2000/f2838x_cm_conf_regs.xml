		<bitfield id="CAN_B" description="Allocate CANB to CM" begin="3" end="3" width="1" rwaccess="RW"/>
	</register>
	<register id="CM_CONF_REGS_LOCK" width="32" page="1" offset="0x3fe" internal="0" description="CM Configuration Registers Lock">
