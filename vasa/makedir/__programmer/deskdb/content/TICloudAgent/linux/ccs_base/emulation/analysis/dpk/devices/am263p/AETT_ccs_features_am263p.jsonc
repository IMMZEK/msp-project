/*
  Define a device and the features apply to it.
  
  Usage:
  "Device_Name": { 	// unique device name as primary key
    "deviceID"   : string, // required, hex value 
    "deviceMask" : string, // required, hex string
    "features" : [ 
      {
        "feature"  : string,   // required, unique ID to predefined feature
        "enable"   : boolean,  // optional, true/false, default=true
        "hostType" : [string], // optional, combination of "win","linux","mac", default=all
        "coreType" : string,   // optional, feature applies to this core type, default=all types
        "coreName" : string,   // optional, feature applies to this specified core, default=all cores of the type
        "args"     : string    // optional, additional; arguments to webapp
      }
    ]
  }
*/
{
  "AM263P": {
    "deviceID" : "0x0BB9502F",
    "deviceMask" : "0x0FFFFFFF",
    "features" : [
      // Cortex-R Core Analysis
      {
        "feature" : "K3CortexRCoreTrace",
        "hostType" : ["win","linux"],
        "coreType" : "Armv7r"
      },
      {
        "feature" : "K3CortexRCodeProfile",
        "hostType" : ["win","linux"],
        "coreType" : "Armv7r"
      },
      // Cortex-M Core Analysis
      {
        "feature" : "K3CortexMEventAnalysis",
        "hostType" : ["win","linux"],
        "coreType" : "Armv7m"
      },
      // SoC Analysis
      {
        "feature" : "STMSoftwareMessaging",
        "hostType" : ["win","linux"]
      }
    ]
  }
}