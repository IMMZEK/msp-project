<?xml version="1.0" encoding="UTF-8"?>
<PropertyList xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<!-- Nodes -->
	<node id="FlashProgrammerNode">
		<name>Flash Settings</name>
		<children>
			<child>CommunicationSettingBasic</child>
			<child>CommunicationSetting</child>
			<child>EraseSetting</child>
			<child>VerifySetting</child>
			<child>ReadSetting</child>
			<child>CCFGSetting</child>
			<child>ResetSetting</child>
		</children>
	</node>

	<!-- Group -->
	<group id="CommunicationSettingBasic">
		<name>Communication Settings</name>
		<children> 
			<child>ComPortInfoText</child>
			<child>ComPortTextField</child>
		</children>
	</group>

	<group id="CommunicationSetting">
		<name>Communication Settings</name>
		<children>
			<child>ProtocolSelection</child>
			<child>ToolUart</child>
			<child>ToolSPIInfoText</child>
			<child>UARTSpeedSelection</child>
			<child>SPISpeedSelection</child>
		</children>
	</group>

	<group id="EraseSetting">
		<name>Erase Settings</name>
		<children> 
			<child>EraseSettingSelection</child>
			<child>SectorTextField</child>
		</children>
	</group>

	<group id="VerifySetting">
		<name>Verify Settings</name>
		<children> 
			<child>VerifySettingSelection</child>
			<child>CustomCrcStartAddrTextField</child>
			<child>CustomCrcLengthTextField</child>
			<child>CustomCrcCrcReferenceTextField</child>
		</children>
	</group>

	<group id="ReadSetting">
		<name>Read Settings</name>
		<children> 
			<child>ReadImageFileInfoText</child>
			<child>ReadImageFileTextField</child>
			<child>ReadStartAddressTextField</child>
			<child>ReadLengthTextField</child>
			<child>ReadButton</child>
		</children>
	</group>

	<group id="CCFGSetting">
		<name>CCFG Settings</name>
		<children> 
			<child>CcfgInfoText</child>
			<child>ManualCcfgSettingCheckBox</child>
			<child>ImageValidAddressTextField</child>
			<child>SectorWriteProtectCheckBox</child>
			<child>SectorWriteProtectTextField</child>
			<child>LockTestTAPCheckBox</child>
			<child>LockPRCMTAPCheckBox</child>
			<child>LockCPUTAPCheckBox</child>
			<child>LockWUCTAPCheckBox</child>
			<child>LockPBIST1TAPCheckBox</child>
			<child>LockPBIST2TAPCheckBox</child>
			<child>DisableBankEraseCheckBox</child>
			<child>DisableChipEraseCheckBox</child>
			<child>LockTIFACheckBox</child>
			<child>EnableBootloaderBackdoorCheckBox</child>
			<child>EnableBootloaderBackdoorPinTextField</child>
			<child>EnableBootloaderBackdoorTriggerPinLevelDropDown</child>
			<child>DisableBootloader</child>
		</children>
	</group>

	<group id="ResetSetting">
		<name>Reset Settings</name>
		<children>
			<child>ResetCheckBox</child>
		</children>
	</group>

	<!-- Categories-->
	<categories>
		<category>Setup</category>
		<category>Advanced</category>
		<category>Erase</category>
		<category>Verify</category>
		<category>Read</category>
		<category>CCFG</category>
		<category>Reset</category>
	</categories>

	<!-- Property Definitions : CommunicationSettingBasic-->
	<property id="ComPortInfoText">
		<target>generic</target>
		<name>Example - COM1 (Windows), /dev/ttyACM0 (Linux), /dev/tty.usbmodem1411 (macOS) </name>
		<valueType>Text</valueType>
		<categories>
			<category>Setup</category>
		</categories>
		<quickSetting />
	</property>

	<property id="ComPortTextField">
		<target>generic</target>
		<name>COM Port</name>
		<valueType>String</valueType>
		<defaultValue>/dev/ttyACM0</defaultValue>
		<description>Enter the serial port for bootloader communication
		</description>
		<categories>
			<category>Setup</category>
		</categories>
		<quickSetting />
	</property>

	<property id="ProtocolSelection">
		<target>generic</target>
		<name>Protocol</name>
		<valueType>ChoiceList</valueType>
		<values>
			<value>UART</value>
			<value>SPI</value>
		</values>
		<defaultValue>UART</defaultValue>
		<description>Protocol selection
		</description>
		<categories>
			<category>Advanced</category>
		</categories>
	</property>

	<property id="ToolUart">
		<target>generic</target>
		<name>Communication Bridge UART</name>
		<valueType>ChoiceList</valueType>
		<values>
			<value>XDS Application UART</value>
			<value>Other</value>
		</values>
		<defaultValue>XDS Application UART</defaultValue>
		<enableIf>
			<property id="ProtocolSelection">UART</property>
		</enableIf>
		<description>Communication bridge selection for UART protocol
		</description>
		<categories>
			<category>Advanced</category>
		</categories>
	</property>

	<property id="ToolSPIInfoText">
		<target>generic</target>
		<name>Communication bridge for SPI is only supported by MSP-BSL "Rocket"</name>
		<valueType>Text</valueType>
		<enableIf>
			<property id="ProtocolSelection">SPI</property>
		</enableIf>
		<categories>
			<category>Advanced</category>
		</categories>
	</property>

	<property id="UARTSpeedSelection">
		<target>generic</target>
		<name>UART Speed</name>
		<valueType>ChoiceList</valueType>	
		<values>
			<value>9600</value>
			<value>19200</value>
			<value>38400</value>
			<value>57600</value>
			<value>115200</value>
			<value>230400</value>
			<value>460800</value>
			<value>921600</value>
		</values>
		<defaultValue>115200</defaultValue>
		<enableIf>
			<property id="ProtocolSelection">UART</property>
		</enableIf>
		<description>UART speed selection
		</description>
		<categories>
			<category>Advanced</category>
		</categories>
		<quickSetting />
	</property>

	<property id="SPISpeedSelection">
		<target>generic</target>
		<name>SPI Speed</name>
		<valueType>ChoiceList</valueType>
		<values>
			<value>125000</value>
			<value>250000</value>
			<value>500000</value>
			<value>1000000</value>
		</values>
		<defaultValue>125000</defaultValue>
		<enableIf>
			<property id="ProtocolSelection">SPI</property>
		</enableIf>
		<description>SPI speed selection
		</description>
		<categories>
			<category>Advanced</category>
		</categories>
	</property>

	<!-- Property Definitions : EraseSetting -->
	<property id="EraseSettingSelection">
		<target>generic</target>
		<name>Erase Setting</name>
		<valueType>ChoiceList</valueType>
		<values>
			<value>Necessary sectors only</value>
			<value>All unprotected sectors</value>
			<value>Specific sector(s) (specify sectors to be erased below)</value>
			<value>Do not erase sectors(program load only)</value>
		</values>
		<defaultValue>Necessary sectors only</defaultValue>
		<description>Erase options execution before programming
		</description>
		<categories>
			<category>Erase</category>
		</categories>
	</property>

	<property id="SectorTextField">
		<target>generic</target>
		<name>Sector(s)</name>
		<valueType>String</valueType>
		<defaultValue></defaultValue>
		<enableIf>
			<property id="EraseSettingSelection">Specific sector(s) (specify sectors to be erased below)</property>
		</enableIf>
		<description>Sector(s) index to be erased
		</description>
		<categories>
			<category>Erase</category>
		</categories>
	</property>

	<!-- Property Definitions : VerifySetting-->
	<property id="VerifySettingSelection">
		<target>generic</target>
		<name>Verify Settings</name>
		<valueType>ChoiceList</valueType>
		<values>
			<value>Automatic verification based on the given firmware image</value>
			<value>Custom CRC check</value>
		</values>
		<defaultValue>Automatic verification based on the given firmware image</defaultValue>
		<description>Memory verification options after programming
		</description>
		<categories>
			<category>Verify</category>
		</categories>
	</property>

	<property id="CustomCrcStartAddrTextField">
		<target>generic</target>
		<name>Start Address</name>
		<valueType>String</valueType>
		<defaultValue></defaultValue>
		<disableIf>
			<property id="VerifySettingSelection">Automatic verification based on the given firmware image</property>
		</disableIf>
		<description>Start address to execute memory verification
		</description>
		<categories>
			<category>Verify</category>
		</categories>
	</property>

	<property id="CustomCrcLengthTextField">
		<target>generic</target>
		<name>Length</name>
		<valueType>String</valueType>
		<defaultValue></defaultValue>
		<disableIf>
			<property id="VerifySettingSelection">Automatic verification based on the given firmware image</property>
		</disableIf>
		<description>Number of bytes to be verified
		</description>
		<categories>
			<category>Verify</category>
		</categories>
	</property>

	<property id="CustomCrcCrcReferenceTextField">
		<target>generic</target>
		<name>CRC reference value (optional)</name>
		<valueType>String</valueType>
		<defaultValue></defaultValue>
		<disableIf>
			<property id="VerifySettingSelection">Automatic verification based on the given firmware image</property>
		</disableIf>
		<description>Expected CRC value
		</description>
		<categories>
			<category>Verify</category>
		</categories>
	</property>

	<!-- Property Definitions : ReadSetting-->
	<property id="ReadImageFileInfoText">
		<target>generic</target>
		<name>Supported format files are: .txt , .hex, and .bin. Start address is read as hexadecimal format. Length of bytes is read as hexadecimal when started with "0x" and as the decimal without "0x".</name>
		<valueType>Text</valueType>
		<categories>
			<category>Read</category>
		</categories>
	</property>

	<property id="ReadImageFileTextField">
		<target>generic</target>
		<name>Read Image File</name>
		<valueType>String</valueType>
		<defaultValue></defaultValue>
		<description>File name storing the read content
		</description>
		<categories>
			<category>Read</category>
		</categories>
	</property>

	<property id="ReadStartAddressTextField">
		<target>generic</target>
		<name>Start Address</name>
		<valueType>String</valueType>
		<defaultValue></defaultValue>
		<description>Start address in memory 
		</description>
		<categories>
			<category>Read</category>
		</categories>
	</property>

	<property id="ReadLengthTextField">
		<target>generic</target>
		<name>Length</name>
		<valueType>String</valueType>
		<defaultValue></defaultValue>
		<description>Number of bytes to read
		</description>
		<categories>
			<category>Read</category>
		</categories>
	</property>

	<property id="ReadButton">
		<target>generic</target>
		<name>Read</name>
		<valueType>Button</valueType>
		<action>DPActiveDebugSession.flash.performOperation("Read")</action>
		<description>Click this button to read the memory and store in a file
		</description>
		<categories>
			<category>Read</category>
		</categories>
	</property>

	<!-- Property Definitions : CCFGSetting -->
	<property id="CcfgInfoText">
		<target>generic</target>
		<name>Select the check box "Manual CCFG Setting" to configure the value of CCFG manually through this GUI. The CCFG setting from the application image will be ignored if the setting is done by the GUI. If the application image does not contain the CCFG setting, and there is not setting done on the GUI, the CCFG setting on the target device will be kept as it is.</name>
		<valueType>Text</valueType>
		<categories>
			<category>CCFG</category>
		</categories>
	</property>

	<property id="ManualCcfgSettingCheckBox">
		<target>generic</target>
		<name>Manual CCFG Setting</name>
		<valueType>Boolean</valueType>
		<defaultValue>0</defaultValue>
		<description>Enable the manual setting of CCFG area from the GUI
		</description>
		<categories>
			<category>CCFG</category>
		</categories>
	</property>
	
	<property id="ImageValidAddressTextField">
		<target>generic</target>
		<name>Image Valid Address</name>
		<valueType>String</valueType>
		<defaultValue>0x00000000</defaultValue>
		<enableIf>
			<property id="ManualCcfgSettingCheckBox">1</property>
		</enableIf>
		<description>Valid address to be executed after power reset
		</description>
		<categories>
			<category>CCFG</category>
		</categories>
	</property>

	<property id="SectorWriteProtectCheckBox">
		<target>generic</target>
		<name>Sector write-protect bit</name>
		<valueType>Boolean</valueType>
		<defaultValue>0</defaultValue>
		<enableIf>
			<property id="ManualCcfgSettingCheckBox">1</property>
		</enableIf>
		<description>Enable sector write-protect bit
		</description>
		<categories>
			<category>CCFG</category>
		</categories>
	</property>

	<property id="SectorWriteProtectTextField">
		<target>generic</target>
		<name>Sector(s)</name>
		<valueType>String</valueType>
		<defaultValue></defaultValue>
		<enableIf>
			<property id="SectorWriteProtectCheckBox">1</property>
		</enableIf>
		<description>Sector(s) index to be protected
		</description>
		<categories>
			<category>CCFG</category>
		</categories>
	</property>

	<property id="LockTestTAPCheckBox">
		<target>generic</target>
		<name>Lock Test TAP</name>
		<valueType>Boolean</valueType>
		<defaultValue>0</defaultValue>
		<enableIf>
			<property id="ManualCcfgSettingCheckBox">1</property>
		</enableIf>
		<description>Lock Test TAP
		</description>
		<categories>
			<category>CCFG</category>
		</categories>
	</property>

	<property id="LockPRCMTAPCheckBox">
		<target>generic</target>
		<name>Lock PRCM TAP</name>
		<valueType>Boolean</valueType>
		<defaultValue>0</defaultValue>
		<enableIf>
			<property id="ManualCcfgSettingCheckBox">1</property>
		</enableIf>
		<description>Lock PRCM TAP
		</description>
		<categories>
			<category>CCFG</category>
		</categories>
	</property>

	<property id="LockCPUTAPCheckBox">
		<target>generic</target>
		<name>Lock CPU TAP</name>
		<valueType>Boolean</valueType>
		<defaultValue>0</defaultValue>
		<enableIf>
			<property id="ManualCcfgSettingCheckBox">1</property>
		</enableIf>
		<description>Lock CPU TAP
		</description>
		<categories>
			<category>CCFG</category>
		</categories>
	</property>

	<property id="LockWUCTAPCheckBox">
		<target>generic</target>
		<name>Lock WUC TAP</name>
		<valueType>Boolean</valueType>
		<defaultValue>0</defaultValue>
		<enableIf>
			<property id="ManualCcfgSettingCheckBox">1</property>
		</enableIf>
		<description>Lock WCU TAP
		</description>
		<categories>
			<category>CCFG</category>
		</categories>
	</property>

	<property id="LockPBIST1TAPCheckBox">
		<target>generic</target>
		<name>Lock PBIST1 TAP</name>
		<valueType>Boolean</valueType>
		<defaultValue>0</defaultValue>
		<enableIf>
			<property id="ManualCcfgSettingCheckBox">1</property>
		</enableIf>
		<description>Lock PBIST1 TAP
		</description>
		<categories>
			<category>CCFG</category>
		</categories>
	</property>

	<property id="LockPBIST2TAPCheckBox">
		<target>generic</target>
		<name>Lock PBIST2 TAP</name>
		<valueType>Boolean</valueType>
		<defaultValue>0</defaultValue>
		<enableIf>
			<property id="ManualCcfgSettingCheckBox">1</property>
		</enableIf>
		<description>Lock PBIST2 TAP
		</description>
		<categories>
			<category>CCFG</category>
		</categories>
	</property>

	<property id="DisableBankEraseCheckBox">
		<target>generic</target>
		<name>Disable Bank Erase</name>
		<valueType>Boolean</valueType>
		<defaultValue>0</defaultValue>
		<enableIf>
			<property id="ManualCcfgSettingCheckBox">1</property>
		</enableIf>
		<description>Disable Bank Erase
		</description>
		<categories>
			<category>CCFG</category>
		</categories>
	</property>

	<property id="DisableChipEraseCheckBox">
		<target>generic</target>
		<name>Disable Chip Erase</name>
		<valueType>Boolean</valueType>
		<defaultValue>0</defaultValue>
		<enableIf>
			<property id="ManualCcfgSettingCheckBox">1</property>
		</enableIf>
		<description>Disable Chip Erase
		</description>
		<categories>
			<category>CCFG</category>
		</categories>
	</property>

	<property id="LockTIFACheckBox">
		<target>generic</target>
		<name>Lock TI FA</name>
		<valueType>Boolean</valueType>
		<defaultValue>0</defaultValue>
		<enableIf>
			<property id="ManualCcfgSettingCheckBox">1</property>
		</enableIf>
		<description>Lock TI FA
		</description>
		<categories>
			<category>CCFG</category>
		</categories>
	</property>

	<property id="EnableBootloaderBackdoorCheckBox">
		<target>generic</target>
		<name>Enable Bootloader Backdoor</name>
		<valueType>Boolean</valueType>
		<defaultValue>0</defaultValue>
		<disableIf>
			<property id="ManualCcfgSettingCheckBox">0</property>
			<property id="DisableBootloader">1</property>
		</disableIf>
		<description>Enable Bootloader Backdoor
		</description>
		<categories>
			<category>CCFG</category>
		</categories>
	</property>

	<property id="EnableBootloaderBackdoorPinTextField">
		<target>generic</target>
		<name>Backdoor Pin DIO</name>
		<valueType>String</valueType>
		<defaultValue>0</defaultValue>
		<disableIf>
			<property id="EnableBootloaderBackdoorCheckBox">0</property>
			<property id="ManualCcfgSettingCheckBox">0</property>
			<property id="DisableBootloader">1</property>
		</disableIf>
		<description>Backdoor Pin DIO
		</description>
		<categories>
			<category>CCFG</category>
		</categories>
	</property>

	<property id="EnableBootloaderBackdoorTriggerPinLevelDropDown">
		<target>generic</target>
		<name>Backdoor trigger pin level</name>
		<valueType>StringList</valueType>
		<values>
			<value>High</value>
			<value>Low</value>
		</values>
		<defaultValue>High</defaultValue>
		<disableIf>
			<property id="EnableBootloaderBackdoorCheckBox">0</property>
			<property id="ManualCcfgSettingCheckBox">0</property>
			<property id="DisableBootloader">1</property>
		</disableIf>
		<description>Backdoor trigger pin level
		</description>
		<categories>
			<category>CCFG</category>
		</categories>
	</property>

	<property id="DisableBootloader">
		<target>generic</target>
		<name>Disable bootloader</name>
		<valueType>Boolean</valueType>
		<defaultValue>0</defaultValue>
		<disableIf>
			<property id="ManualCcfgSettingCheckBox">0</property>
			<property id="EnableBootloaderBackdoorCheckBox">1</property>
		</disableIf>
		<description>Disable bootloader
		</description>
		<categories>
			<category>CCFG</category>
		</categories>
	</property>

	<property id="ResetCheckBox">
		<target>generic</target>
		<name>Reset</name>
		<valueType>Boolean</valueType>
		<defaultValue>1</defaultValue>
		<disableIf>
			<property id="DisableBootloader">1</property>
		</disableIf>
		<description>Apply software reset after programming. If the Bootloader is disabled, reset is not available as the Bootloader communication is disabled.
		</description>
		<categories>
			<category>Reset</category>
		</categories>
	</property>

	<!-- Finish -->
</PropertyList>
