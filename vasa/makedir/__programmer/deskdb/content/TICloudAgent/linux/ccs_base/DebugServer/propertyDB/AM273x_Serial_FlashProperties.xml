<?xml version="1.0" encoding="UTF-8"?>
<PropertyList xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<!-- Nodes -->
	<node id="FlashProgrammerNode">
		<name>Flash Settings</name>
		<children>
			<child>COMPort</child>
			<child>COMPortText</child>
			<child>FlashOffsetNote</child>
			<child>FlashSblOffset</child>
			<child>FlashAppOffset</child>
			<!-- <child>FlashErase</child> -->
			<child>CustomFlashEnable</child>
			<child>FlashCustomNote</child>
			<child>FlasherCustomPath</child>
			<child>FlasherCustomName</child>
		</children>
	</node>

	<categories>
		<category>Setup</category>
		<category>Board Type</category>
		<category>Flash Offset</category>
		<!-- <category>Erase</category> -->
		<category>Custom Flasher</category>
	</categories>
	
	<!-- Property Definitions -->
	<property id="COMPortText">
		<target>generic</target>
		<name>Example - COM1 (Windows), /dev/ttyACM0 (Linux)</name>
		<valueType>Text</valueType>
		<categories>
            <category>Setup</category>
        </categories>
		<quickSetting />
	</property>

	<property id="COMPort">
		<target>generic</target>
		<name>COM Port</name>
		<valueType>String</valueType>
		<defaultValue>COM1</defaultValue>
		<description>Enter the serial port for the device named "XDS110 Class Application/User UART".
		</description>
		<categories>
            <category>Setup</category>
        </categories>
		<quickSetting />
	</property>

	<property id="FlashOffsetNote">
		<target>generic</target>
		<name>SBL Offset is set by the ROM bootloader. Please enter the custom appimage offset in hexadecimal format if you have configured a different application offset in SBL.</name>
		<valueType>Text</valueType>
		<categories>
            <category>Flash Offset</category>
        </categories>
	</property>

	<property id="FlashSblOffset">
		<target>generic</target>
		<name>SBL Image Offset</name>
		<valueType>String</valueType>	
		<defaultValue>0x0</defaultValue>
		<readOnly>1</readOnly>
		<description>Offset in the flash where the file gets flashed
		</description>
		<categories>
			<category>Flash Offset</category>
	    </categories>
	</property>

	<property id="FlashAppOffset">
		<target>generic</target>
		<name>Application Image Offset</name>
		<valueType>String</valueType>	
		<defaultValue>0xA0000</defaultValue>
		<description>Offset in the flash where the file gets flashed
		</description>
		<categories>
			<category>Flash Offset</category>
	    </categories>
	</property>

	<!-- <property id="FlashErase">
		<target>generic</target>
		<name>Erase Flash</name>
		<valueType>Button</valueType>
		<categories>
			<category>Erase</category>
		</categories> 
		<action>DPActiveDebugSession.flash.performOperation("Erase")</action>
	</property> -->

	<property id="FlashCustomNote">
		<target>generic</target>
		<name>For a custom board with different flash, see SDK documentation to build the UART UniFlash flasher app and enter the TI image path here </name>
		<valueType>Text</valueType>
		<categories>
			<category>Custom Flasher</category>
		</categories> 
	</property>

	<property id="CustomFlashEnable">
	    <target>generic</target>
	    <name>Custom Flasher</name>
	    <valueType>Boolean</valueType>
	    <defaultValue>0</defaultValue>
	    <categories>
			<category>Custom Flasher</category>
		</categories> 
	</property>

	
	<property id="FlasherCustomPath">
	    <target>generic</target>
	    <name>Flasher Path</name>
	    <valueType>String</valueType>
	    <defaultValue>C:\ti</defaultValue>
		<disableIf>
			<property id="CustomFlashEnable">0</property>
		</disableIf>
	    <categories>
			<category>Custom Flasher</category>
		</categories> 
	</property>
	
	<property id="FlasherCustomName">
	    <target>generic</target>
	    <name>Flasher Name</name>
	    <valueType>String</valueType>
	    <defaultValue>uart_uniflash.release.tiimage</defaultValue>
	    <disableIf>
			<property id="CustomFlashEnable">0</property>
		</disableIf>
	    <categories>
			<category>Custom Flasher</category>
		</categories> 
	</property>
	
	
	<!-- Finish -->
</PropertyList>