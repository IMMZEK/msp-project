<?xml version="1.0" encoding="UTF-8"?>
<PropertyList xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<!-- Nodes -->
	<node id="FlashProgrammerNode">
		<name>Flash Settings</name>
		<children>
			<child>FlashBoardType</child>
			<child>CustomFlashEnable</child>
			<child>FlashCustomNote</child>
			<child>FlasherCustomPath</child>
			<child>FlasherCustomName</child>
		</children>
	</node>

	<!-- Category -->
	<categories>
		<category>Board Type</category>
		<category>Custom Flasher</category>
		<category>Format</category>
	</categories>
	
	<property id="FlashBoardType">
		<target>TMS470RDX</target>
		<name>Board</name>
		<valueType>ChoiceList</valueType>
		<values>
			<value>CC</value>
			<value>LP</value>
		</values>
		<defaultValue>CC</defaultValue>
		<categories>
			<category>Board Type</category>
		</categories> 
	</property>

	<!-- Properties -->
	<property id="FlashCustomNote">
		<target>TMS470RDX</target>
		<name>Note: If you have custom board with different flash. Please refer SDK Documentation to build your flasher application and enter the path of .out below</name>
		<valueType>Text</valueType>
		<categories>
			<category>Custom Flasher</category>
		</categories> 
	</property>
	<property id="CustomFlashEnable">
	    <target>TMS470RDX</target>
	    <name>Custom Flasher</name>
	    <valueType>Boolean</valueType>
	    <defaultValue>0</defaultValue>
	    <categories>
			<category>Custom Flasher</category>
		</categories> 
	</property>

	
	<property id="FlasherCustomPath">
	    <target>TMS470RDX</target>
	    <name>Flasher Path</name>
	    <valueType>String</valueType>
	    <defaultValue>C:\ti</defaultValue>
		<disableIf>
			<property id="CustomFlashEnable">0</property>
		</disableIf>
	    <categories>
			<category>Custom Flasher</category>
		</categories> 
	</property>
	
	<property id="FlasherCustomName">
	    <target>TMS470RDX</target>
	    <name>Flasher Name</name>
	    <valueType>String</valueType>
	    <defaultValue>flasher_jtag_uniflash.out</defaultValue>
	    <disableIf>
			<property id="CustomFlashEnable">0</property>
		</disableIf>
	    <categories>
			<category>Custom Flasher</category>
		</categories> 
	</property>
	
	<!-- finish -->
</PropertyList>
